@model BoardingHouseApp.Models.BookingData

@{
    Layout = "_LayoutAdmin";
}
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3>Edit Booking Lily Kost🌺</h3>
            </div>

            <div class="card-body">
                <form enctype="multipart/form-data" method="post" asp-action="Edit" asp-controller="BookingData">
                    <input type="text" value="@Model.Id" name="Id" hidden>
                    <div class="mb-3">
                        <label>Nama</label>
                        <input type="text" name="Name" class="form-control" value="@Model.Name" />
                    </div>
                    <div class="mb-3">
                        <label>Nomor Telepon</label>
                        <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                    </div>
                    <div class="mb-3">
                        <label>Nomor Induk Kependudukan</label>
                        <input type="text" name="IDCardNumber" class="form-control" value="@Model.IDCardNumber" />
                    </div>
                    <div class="mb-3">
                        <label>Pekerjaan</label>
                        <input type="text" name="Work" class="form-control" value="@Model.Work" />
                    </div>
                    <div class="mb-3">
                        <label>Jumlah Kamar</label>
                        <input type="text" name="Count" class="form-control" value="@Model.Count" />
                    </div>
                    <button type="submit" class="btn btn-success">
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>